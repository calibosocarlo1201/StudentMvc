@{
}

@model StudentMvc.Models.Entities.Student

<h1>Student Details</h1>

@if (Model is null)
{
    {
        <p>No student found.</p>
    }
}
else
{
    @Model.Id
    <form method="post">

        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subscribe" asp-for="Subscribe" />
            <label class="form-label" for="Subscribe">Subscribe</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="DeleteStudent" asp-controller="Students" asp-route-id="@Model.Id">Delete</button>
        </div>

    </form>
}


