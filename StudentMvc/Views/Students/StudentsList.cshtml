@{
}

@model List<StudentMvc.Models.Entities.Student>

<h1>Students List</h1>

<div class="card">
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                  <tr>
                        <td>@student.Id</td>
                        <td>@student.Name</td>
                        <td>@student.Email</td>
                        <td><a class="btn btn-primary" asp-controller="Students" asp-action="EditStudent" asp-route-id="@student.Id">Edit</a></td>
                  </tr>  
                }
            </tbody>
        </table>
    </div>
</div>